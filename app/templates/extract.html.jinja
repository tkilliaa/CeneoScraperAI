{% extends "layout.html.jinja" %}

{% block middle %}
    <h2> Opinions extraction </h2>
    <h3>{{ test }}</h3>
    {% if form.productId.errors %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {% for error in form.productId.errors  %}
                <p><i class="bi bi-exclamation-triangle-fill"></i> {{ error }}</p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    <form method="POST" action="{{ url_for('extract') }}">
        {{ form.csrf_token }}
        {{ form.productId.label }} {{ form.productId(size=20) }}
        {{ form.submit(class_="btn btn-info")}}
    </form>
{% endblock middle %}